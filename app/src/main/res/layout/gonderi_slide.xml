<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/arkaPlanRengi"
    android:padding="25dp">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="@color/yaziRengi" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/view"
        android:layout_marginTop="7dp"
        android:background="@color/yaziRengi" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_slide_baslik"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/yaziRengi" />

    <ImageView
        android:id="@+id/iv_resim"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_below="@+id/view2"
        android:layout_marginTop="25dp"
        android:layout_weight="0.6"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:transitionName="tResim" />

    <TextView
        android:id="@+id/tv_slide_baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_resim"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/special"
        android:letterSpacing="0.1"
        android:text="#baslik"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/yaziRengi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:transitionName="tBaslik" />

    <TextView
        android:id="@+id/tv_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/view"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/special"
        android:text="9.9.2020"
        android:textColor="@color/yaziRengi" />

</RelativeLayout>